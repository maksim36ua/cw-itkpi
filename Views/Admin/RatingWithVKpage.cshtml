@model List<UserInfo>

<div class="container-fluid">

    <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12" style="margin-top:10px;">
        <table class="table table-striped">

            @for (int i = 0; i < Model.Count; i++)
            {
                <tr >
                    <td>
                        @(i + 1)
                    </td>
                    <td>
                        @@@Html.DisplayFor(modelItem => modelItem[i].vkLink) (@Html.DisplayFor(modelItem => modelItem[i].username))
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => modelItem[i].thisWeekHonor) (@Html.DisplayFor(modelItem => modelItem[i].honor))
                    </td>                    

                </tr>
            }
        </table>
    </div>
</div>
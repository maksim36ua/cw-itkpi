@model List<UserInfo>

<div class="container-fluid">

    <div class="col-lg-8 col-md-8 col-sm-8">
        <h1>PLACE HOLDER</h1>
    </div>

    <div class="col-lg-4 col-md-4 col-sm-4">
        <iframe class="col" src="@Url.Action("RegButton","Registration")" style="width:100%; height:100%"></iframe>
    </div>

    <div class="col-md-12">
        <table class="table table-striped">
            <tr>
                <th>Position</th>
                <th>Name</th>
                <th>This week points</th>
                <th>Previous rating points</th>
                <th>Total points</th>
                <th>Clan</th>
            </tr>

            @for (int i = 0; i < Model.Count; i++)
            {
                string color;
                if (i <= 4)
                {
                    color = "success";
                }
                else if (i > 4 && i < 10)
                {
                    color = "info";
                }
                else if (i > 10 && i < 20)
                {
                    color = "warning";
                }
                else
                {
                    color = "";
                }
                <tr class="@color">
                    <td>
                        @(i + 1)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => modelItem[i].username)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => modelItem[i].thisWeekHonor)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => modelItem[i].lastWeekHonor)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => modelItem[i].honor)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => modelItem[i].clan)
                    </td>

                </tr>
            }
        </table>
    </div>
</div>
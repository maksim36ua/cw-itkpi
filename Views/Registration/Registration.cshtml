@model UserInfo

<div class="container-fluid">
    <div class="col-xs-4 col-sm-4 col-md-4 col-lg-4">
        <form asp-controller="Registration" asp-action="Registration" method="post" class="form-horizontal" role="form">
            <div class="form-horizontal">
                <div asp-validation-summary="ValidationSummary.All" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="username" style="text-align:left" class="col-md-12 control-label">Ім'я на Codewars</label>
                    <div class="col-md-12">
                        <input asp-for="username" class="form-control" placeholder="Обов'язкове поле" />
                        <span asp-validation-for="username" class="text-danger"></span>
                    </div>
                    <label asp-for="vkLink" style="text-align:left" class="col-md-12 control-label">Посилання на сторінку vk.com</label>
                    <div class="col-md-12">
                        <input asp-for="vkLink" class="form-control" placeholder="Опціональне поле" />
                        <span asp-validation-for="vkLink" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-12">
                        <input type="submit" value="Вступити до клану" class="btn btn-default" />
                    </div>
                </div>
            </div>
        </form>
    </div>
        <div class="col-xs-4 col-sm-4 col-md-4 col-lg-4">
            <img src="~/images/Uncle-Sam.png" height="480" width="343" style="margin-left: 0" />
        
       </div> 
    </div>